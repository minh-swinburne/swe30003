<div class="overflow-hidden transition-all hover:shadow-md rounded-lg border bg-card text-card-foreground">
    <div class="relative h-48 w-full">
        <img src="@ImageSrc" alt="@Title" class="object-cover w-full h-full" />
    </div>
    <div class="p-6">
        <h3 class="text-xl font-bold">@Title</h3>
        <p class="text-gray-600 mb-4">@Description</p>
        <p class="font-medium text-yellow-600">@Price</p>
    </div>
    <div class="p-6 pt-0">
        <button class="inline-flex w-full items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium ring-offset-background transition-colors hover:bg-accent hover:text-accent-foreground group">
            Learn More
            <i class="oi oi-arrow-right ml-2 transition-transform group-hover:translate-x-1"></i>
        </button>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "";

    [Parameter]
    public string Description { get; set; } = "";

    [Parameter]
    public string Price { get; set; } = "";

    [Parameter]
    public string ImageSrc { get; set; } = "/placeholder.svg";
}

