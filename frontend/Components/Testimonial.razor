<div class="rounded-lg border bg-card text-card-foreground h-full">
    <div class="flex flex-row items-center gap-4 p-6 pb-2 border-b">
        <div class="relative h-12 w-12 rounded-full overflow-hidden">
            <img src="@ImageSrc" alt="@Name" class="object-cover w-full h-full" />
        </div>
        <div>
            <h3 class="font-medium">@Name</h3>
            <p class="text-sm text-gray-600">@Role</p>
        </div>
    </div>
    <div class="p-6">
        <div class="flex mb-4">
            @for (int i = 0; i < 5; i++)
            {
                <i class="oi oi-star @(i < int.Parse(Rating) ? "text-yellow-500" : "text-gray-300")"></i>
            }
        </div>
        <p class="text-gray-600">@Content</p>
    </div>
</div>

@code {
    [Parameter]
    public string Name { get; set; } = "";

    [Parameter]
    public string Role { get; set; } = "";

    [Parameter]
    public string Content { get; set; } = "";

    [Parameter]
    public string Rating { get; set; } = "5";

    [Parameter]
    public string ImageSrc { get; set; } = "/placeholder.svg";
}

